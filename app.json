  "repository": "https://github.com/yourusername/p2p-file-sharing-app",
  "logo": "https://cdn.jsdelivr.net/npm/simple-icons@v3/icons/webrtc.svg",
  "keywords": ["node", "express", "webrtc", "p2p", "file-sharing", "react"],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
