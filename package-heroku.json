{
  "name": "p2p-file-sharing-app",
  "version": "1.0.0",
  "description": "A peer-to-peer file sharing application with WebRTC",
  "main": "dist/backend/server.js",
  "scripts": {
    "start": "node dist/backend/server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build && cd ..",
    "dev": "ts-node src/backend/server.ts",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/multer": "^1.4.13",
    "@types/socket.io": "^3.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}